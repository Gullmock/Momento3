<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".venta"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="REGISTROS VENTAS"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="NÚMERO DE VENTA"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <EditText
                android:id="@+id/etnventavendeventa"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="INGRESE NUMERO VENTA"
                android:inputType="number"
                android:fontFamily="@font/basic"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ZONA"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="INGRESE NÚMERO DE ZONA"
                android:gravity="center"
                android:fontFamily="@font/basic"
                android:id="@+id/etidzonaventavende"
                android:inputType="text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="VENDEDOR"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#001479"
                android:fontFamily="@font/basic"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="INGRESE VENDEDOR"
                android:gravity="center"
                android:id="@+id/etidvendedorventaven"
                android:fontFamily="@font/basic"
                android:inputType="textWebEmailAddress"
                />

            <TextView
                android:fontFamily="@font/basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="FECHA"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#001479"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="INGRESE FECHA"
                android:gravity="center"
                android:id="@+id/etfechaventavendedor"
                android:inputType="date"
                android:fontFamily="@font/basic"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="VALOR"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="INGRESE VALOR"
                android:gravity="center"
                android:id="@+id/etvalorventavend"
                android:inputType="number"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnlistarventavendedor"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Listar"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="Buscar"
                    android:id="@+id/btnbuscarventavendedor"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:layout_marginRight="5dp"
                    />
                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="REGRESAR"
                    android:id="@+id/btnregresar"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>