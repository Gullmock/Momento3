<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendedor"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="REGISTROS VENDEDOR"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="IDENTIFICACIÓN"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <EditText
                android:id="@+id/etvendedorvende"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="INGRESE IDENTIFICACIÓN"
                android:inputType="number"
                android:fontFamily="@font/basic"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="NOMBRE"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="INGRESE NOMBRE"
                android:gravity="center"
                android:fontFamily="@font/basic"
                android:id="@+id/etnombrevende"
                android:inputType="text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="E-MAIL"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#001479"
                android:fontFamily="@font/basic"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="INGRESE EMAIL"
                android:gravity="center"
                android:id="@+id/etemailvende"
                android:fontFamily="@font/basic"
                android:inputType="textWebEmailAddress"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="CLAVE"
                android:fontFamily="@font/basic"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#001479"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="INGRESE CLAVE"
                android:gravity="center"
                android:fontFamily="@font/basic"
                android:id="@+id/etclavevende"
                android:inputType="textPassword"
                />

            <TextView
                android:fontFamily="@font/basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="FECHA INGRESO"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#001479"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="INGRESE FECHA"
                android:gravity="center"
                android:id="@+id/etfechavendedorvende"
                android:inputType="date"
                android:fontFamily="@font/basic"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="TOTAL VENTAS"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="INGRESE TOTAL"
                android:gravity="center"
                android:id="@+id/etventavendevende"
                android:inputType="number"
                android:fontFamily="@font/basic"
                android:textColor="#001479"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnlistarvendevende"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Listar"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="Buscar"
                    android:id="@+id/btnbuscarvendevende"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:layout_marginRight="5dp"                    />

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="REGRESAR"
                    android:id="@+id/btnregresar"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:layout_marginRight="5dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>